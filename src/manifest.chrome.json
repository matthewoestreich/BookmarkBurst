{
  "manifest_version": 3,
  "name": "BookmarkBurst",
  "version": "1.0",
  "description": "Browser extension for various bookmark related tasks.",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": ["tabs", "bookmarks"],
  "optional_host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": "icons/icon.png"
  }
}
