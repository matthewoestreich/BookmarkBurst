{
  "manifest_version": 3,
  "name": "BookmarkBurst",
  "version": "1.0",
  "description": "Browser extension for various bookmark related tasks.",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": ["tabs", "bookmarks"],
  "host_permissions": [],
  "optional_permissions": ["<all_urls>"],
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  },
  "action": {
    "default_icon": "icons/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bookmarkburst@bookmarkburst.com"
    }
  }
}
